<h6>New Answer</h6>
<div>
  <form>
    <div class="form-group">
      <label for="content">Answer</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <button {{action 'saveAnswer'}}>Save</button>
  </form>
</div>

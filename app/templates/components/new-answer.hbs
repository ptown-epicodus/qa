<div class="panel panel-success">
  <div class="panel-heading">
    <h6 class="panel-title">New Answer</h6>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content" placeholder="Answer."}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder="John"}}
      </div>

      <button {{action 'saveAnswer'}} class="btn btn-xs btn-success">Save</button>
    </form>
  </div>
</div>

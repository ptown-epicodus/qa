{{#if addNewQuestion}}
<div class="panel panel-success">
  <div class="panel-heading">
  <h6 class="panel-title">New Question</h6>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="title">Question</label>
        {{input class="form-control" value=title id="title" placeholder="Question?"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder="John Doe"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{textarea class="form-control" value=notes id="notes"}}
      </div>

      <button {{action 'save'}} class="btn btn-xs btn-success">Save</button>
    </form>
  </div>
  </div>
{{else}}
  <button {{action 'questionFormShow'}} class="btn btn-success">New Question</button>
{{/if}}
